# Fully offline local mode using Supabase local stack.
# Copy to .env.auth.local (or use scripts/start-local-auth.sh local_offline).

AUTH_MODE=local_offline
AUTH_REQUIRED=false

# Default local Supabase Auth endpoints.
AUTH_ISSUER=http://127.0.0.1:54321/auth/v1
AUTH_AUDIENCE=authenticated
AUTH_JWKS_URL=http://127.0.0.1:54321/auth/v1/.well-known/jwks.json
# Supabase CLI local default JWT signing secret (HS256). Override if your local stack is customized.
AUTH_HS256_SHARED_SECRET=super-secret-jwt-token-with-at-least-32-characters-long

# Comma-separated list (no spaces required)
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8000

RATE_LIMIT_SCREEN_EVENTS=15/minute
RATE_LIMIT_USER_INFO_WRITE=10/minute
RATE_LIMIT_ALARM_SNOOZE_WRITE=30/minute
RATE_LIMIT_PUSH_TOKEN_WRITE=20/minute
RATE_LIMIT_FRIEND_REQUEST_SEND=10/minute
RATE_LIMIT_FRIEND_REQUEST_RESPOND=20/minute
RATE_LIMIT_FRIEND_REMOVE=10/minute

FEATURE_FLAG_FRIEND_SNOOZE_FANOUT=false
PUSH_NOTIFICATION_PROVIDER=noop
PUSH_NOTIFICATION_DRY_RUN=true
APNS_TOPIC=
APNS_TEAM_ID=
APNS_KEY_ID=
APNS_PRIVATE_KEY_PEM=
APNS_USE_SANDBOX=true
APNS_REQUEST_TIMEOUT_SECONDS=10

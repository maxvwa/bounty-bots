# Core runtime
APP_ENV=production
DEBUG=false
SECRET_KEY=change-me-with-a-long-random-secret
JWT_SECRET=change-me-with-a-long-random-jwt-secret-32-bytes-minimum
JWT_EXPIRY_HOURS=24

# Database
POSTGRES_USER=app_user
POSTGRES_PASSWORD=change-me-strong-db-password
POSTGRES_DB=app_db

# Auth runtime contract
AUTH_MODE=hosted_dev
AUTH_REQUIRED=true
AUTH_ISSUER=https://your-project-ref.supabase.co/auth/v1
AUTH_AUDIENCE=authenticated
AUTH_JWKS_URL=https://your-project-ref.supabase.co/auth/v1/.well-known/jwks.json
AUTH_HS256_SHARED_SECRET=

# API + frontend origins
# For this VM deployment target:
# - frontend public URL: http://94.72.103.110
# - backend public URL (proxied): http://94.72.103.110/api
CORS_ALLOWED_ORIGINS=http://94.72.103.110,https://94.72.103.110

# Payments
MOLLIE_API_KEY=
MOLLIE_REDIRECT_BASE_URL=http://94.72.103.110
MOLLIE_WEBHOOK_BASE_URL=http://94.72.103.110/api
